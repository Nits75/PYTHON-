import turtle
import time
def myfun():
    colors=["red","blue","green","yellow"]
    turtle.Turtle
    turtle.pensize(5)
    turtle.bgcolor('BLACK')
    turtle.speed(1000)
    for x in range(360):
        turtle.pencolor(colors[x%len(colors)])
        turtle.pensize(x/50)
        turtle.forward(x)
        turtle.left(59)
myfun()
time.sleep(5)

